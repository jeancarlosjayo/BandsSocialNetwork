<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterStep1Activity">


    <ImageButton
        android:id="@+id/backbtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_baseline_arrow_back_ios_new_24"
        android:backgroundTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toBottomOf="@id/backbtn">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/info1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/editar_promotor"
                android:textColor="@color/purple_200"
                android:textSize="25sp"
                android:textStyle="bold"
                android:visibility="visible">

            </ImageView>




            <TextView
                android:id="@+id/info3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/info1"
                android:layout_marginTop="30dp"
                android:justificationMode="inter_word"
                android:text="Nº RUC"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold">

            </TextView>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtRUC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/info3"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_strokeorange"
                android:hint="RUC"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:padding="10dp"
                android:paddingStart="20dp">


            </com.google.android.material.textfield.TextInputEditText>

            <TextView
                android:id="@+id/info4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtRUC"
                android:layout_marginTop="10dp"
                android:justificationMode="inter_word"
                android:text="Nº DNI"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold">

            </TextView>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtDNI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/info4"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_strokeorange"
                android:hint="DNI"
                android:inputType="number"
                android:maxLength="8"
                android:maxLines="1"
                android:padding="10dp"
                android:paddingStart="20dp">


            </com.google.android.material.textfield.TextInputEditText>

            <TextView
                android:id="@+id/info44"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtDNI"
                android:layout_marginTop="10dp"
                android:justificationMode="inter_word"
                android:text="Nombre completo"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold">

            </TextView>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtNombreCompleto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/info44"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_strokeorange"
                android:hint="Apellidos y Nombres"
                android:inputType="textCapCharacters"
                android:maxLines="1"
                android:padding="10dp"
                android:paddingStart="20dp">


            </com.google.android.material.textfield.TextInputEditText>


            <TextView
                android:id="@+id/info7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="400dp"
                android:justificationMode="inter_word"
                android:text="Correo electrónico"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold">

            </TextView>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/info7"
                android:layout_alignTop="@+id/edtNombreCompleto"
                android:layout_marginTop="100dp"
                android:background="@drawable/ic_strokeorange"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="10dp"
                android:paddingStart="20dp">


            </com.google.android.material.textfield.TextInputEditText>

            <TextView
                android:id="@+id/info8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtEmail"
                android:layout_marginTop="10dp"
                android:justificationMode="inter_word"
                android:text="Teléfono"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold">

            </TextView>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/info8"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_strokeorange"
                android:hint="Celular o teléfono fijo"
                android:inputType="phone"
                android:maxLength="9"
                android:maxLines="1"
                android:padding="10dp"
                android:paddingStart="20dp">


            </com.google.android.material.textfield.TextInputEditText>

            <TextView
                android:id="@+id/info9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtTelefono"
                android:layout_marginTop="10dp"
                android:justificationMode="inter_word"
                android:text="Nombre de la empresa"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold">

            </TextView>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtNombreEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/info9"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_strokeorange"
                android:hint="Nombre legal"
                android:inputType="textCapCharacters"
                android:maxLines="1"
                android:padding="10dp"
                android:paddingStart="20dp">


            </com.google.android.material.textfield.TextInputEditText>

            <TextView
                android:id="@+id/info10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtNombreEmpresa"
                android:layout_marginTop="10dp"
                android:justificationMode="inter_word"
                android:text="Edad"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold">

            </TextView>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtEdad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/info10"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_strokeorange"
                android:hint="Mayor de 18 años"
                android:inputType="number"
                android:maxLength="2"
                android:padding="10dp"
                android:paddingStart="20dp">


            </com.google.android.material.textfield.TextInputEditText>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnModificar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="800dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/btn_modificar"
                android:drawableTint="@color/white"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="800dp"
                android:layout_marginStart="200dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/btncancelar"
                android:drawableTint="@color/white"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />


        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>