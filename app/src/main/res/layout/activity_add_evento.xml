<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AddPublicationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/backbtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_baseline_arrow_back_ios_new_24"
            android:backgroundTint="@color/black" />


        <ImageView
            android:id="@+id/imgView"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_above="@+id/tituloadd"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/addevento"
            android:scaleType="fitStart">

        </ImageView>

        <TextView
            android:id="@+id/tituloadd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edtDescripcion"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="-180dp"
            android:justificationMode="inter_word"
            android:text="Título "
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold">

        </TextView>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtTituloEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/info4"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_strokeorange"
            android:hint="Titulo"
            android:inputType="text"
            android:maxLength="30"
            android:maxLines="1"
            android:padding="10dp"
            android:paddingStart="20dp">


        </com.google.android.material.textfield.TextInputEditText>

        <TextView
            android:id="@+id/info4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edtDescripcion"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="-270dp"
            android:justificationMode="inter_word"
            android:text="Descripción"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold">

        </TextView>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtDescripcion"
            android:layout_width="361dp"
            android:layout_height="53dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="278dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_amogusrectangles"
            android:hint="Descripcion"
            android:inputType="textMultiLine"
            android:maxLines="20"
            android:padding="10dp"
            android:paddingStart="20dp">


        </com.google.android.material.textfield.TextInputEditText>

        <TextView
            android:id="@+id/info5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtDescripcion"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:justificationMode="inter_word"
            android:text="Imagen"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold">

        </TextView>

        <LinearLayout
            android:id="@+id/edtImagen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info5"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_image_24">

            </ImageView>

            <TextView
                android:id="@+id/pImageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="imagen.jpg">

            </TextView>
        </LinearLayout>

        <ImageButton
            android:id="@+id/addEvento"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_below="@id/edtImagen"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/addbutton">

        </ImageButton>


        <TextView
            android:id="@+id/fechaEditTextEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edtDescripcion"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="-530dp"
            android:justificationMode="inter_word"
            android:text="Fecha"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold">

        </TextView>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtFecha"
            android:layout_width="361dp"
            android:layout_height="53dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="530dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_amogusrectangles"
            android:hint="Día / Mes / Año"
            android:inputType="textMultiLine"
            android:maxLines="20"
            android:padding="10dp"
            android:paddingStart="20dp">


        </com.google.android.material.textfield.TextInputEditText>



    </RelativeLayout>
</androidx.core.widget.NestedScrollView>

