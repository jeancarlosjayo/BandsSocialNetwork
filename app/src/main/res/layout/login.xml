<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:addStatesFromChildren="false"
    android:alwaysDrawnWithCache="false">


    <EditText
        android:id="@+id/txtPass"
        android:layout_width="450dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_launcher_edittext"
        android:drawableRight="@drawable/ojo"
        android:hint="  Contraseña"
        android:inputType="textPassword"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="633dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Regístrate"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.608"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="1077dp" />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="452dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_launcher_edittext"
        android:drawableRight="@drawable/check"
        android:hint="  Correo electronico"
        android:inputType="textEmailAddress"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="519dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="427dp"
        android:layout_height="110dp"
        android:autoSizeMaxTextSize="50sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:text="Bienvenido"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="180dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="427dp"
        android:layout_height="69dp"
        android:autoSizeMaxTextSize="50sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:text="a"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="265dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="181dp"
        android:layout_height="46dp"
        android:text="¿No tienes una cuenta?"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="310dp"
        tools:layout_editor_absoluteY="1077dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="404dp"
        android:layout_height="66dp"
        android:autoSizeMaxTextSize="50sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:text="BandaPE"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="268dp" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="¿Olvidaste tu contraseña?"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="1003dp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="331dp"
        android:layout_height="66dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ic_launcher_buttons"
        android:text="Iinicar Sesion"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="820dp" />

</androidx.constraintlayout.widget.ConstraintLayout>